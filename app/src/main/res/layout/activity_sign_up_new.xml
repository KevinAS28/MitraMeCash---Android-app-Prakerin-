                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical">

                        <TextView
                                android:layout_marginBottom="@dimen/home_text_12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_form_regis"
                                android:textSize="@dimen/home_text_16dp"/>

                        <android.support.design.widget.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:id="@+id/txtinput1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txt_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_perm_identity_black_24dp"
                                    android:hint="Username"
                                    android:inputType="text"
                                    android:textSize="18sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:id="@+id/txtinput2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txt_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                                    android:hint="Password"
                                    android:inputType="text|textPassword"
                                    android:textSize="18sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                                android:id="@+id/txtinput3"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                    android:id="@+id/txt_retype"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                                    android:hint="Retype-Password"
                                    android:inputType="text|textPassword"
                                    android:textSize="18sp" />
                        </android.support.design.widget.TextInputLayout>

                        <View
